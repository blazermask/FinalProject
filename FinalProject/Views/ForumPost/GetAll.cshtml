@model List<GetAllForumPostsViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Forum Posts</h2>
        <a asp-action="Create" class="btn btn-primary">Добави нов пост</a>
    </div>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var forumPost in Model)
            {
                <a asp-action="Details" asp-route-id="@forumPost.Id" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">@forumPost.Title</h5>
                    <small class="text-muted">Author: @forumPost.AuthorFirstName @forumPost.AuthorLastName</small>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No forum posts found.</p>
    }
</div>